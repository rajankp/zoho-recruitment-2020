var arrFull = [];
var arrItem = [];
var formMatrix = (inpNum) => {
    arrItem = [];
    for(var i = inpNum ; i > 0; i--) {
        arrItem.push(inpNum);          
    }
    arrFull.push(arrItem);
    if(inpNum > 0) {
        formMatrix(--inpNum);
    } else {
        console.log(arrFull);
        return;
    } 

}

formMatrix(5);
